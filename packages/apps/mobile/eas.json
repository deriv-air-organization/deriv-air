{
  "cli": {
    "version": ">= 0.57.0"
  },
  "build": {
    "monorepo": {
      "cache": {
        "key": "turbo",
        "customPaths": ["../../../node_modules/.cache/turbo"]
      }
    },
    "development": {
      "extends": "monorepo",
      "distribution": "internal",
      "android": {
        "buildType": "apk"
      }
    },
    "production": {
      "extends": "monorepo",
      "distribution": "store",
      "android": {
        "buildType": "app-bundle"
      }
    }
  }
}
